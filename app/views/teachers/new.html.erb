<h1>Clock In/Out</h1>

  <div class="col-md-5">
    <%= form_for @teacher do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter your name" %>
      </div>
      <%= f.hidden_field :time_in, :value => Time.now %>
      <%= f.hidden_field :time_out, :value => "N/A" %>
      <div class="form-group">
        <%= f.submit "Clock In", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>

